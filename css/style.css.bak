.day-slide:nth-of-type(1).anim-in .day-image { animation-delay: 0.2s; }
.day-slide:nth-of-type(2).anim-in .day-image { animation-delay: 0.4s; }
.day-slide:nth-of-type(3).anim-in .day-image { animation-delay: 0.6s; }
.day-slide:nth-of-type(4).anim-in .day-image { animation-delay: 0.8s; }

.day-slide:nth-of-type(1).anim-out .day-image { animation-delay: 0.2s; }
.day-slide:nth-of-type(2).anim-out .day-image { animation-delay: 0.4s; }
.day-slide:nth-of-type(3).anim-out .day-image { animation-delay: 0.6s; }
.day-slide:nth-of-type(4).anim-out .day-image { animation-delay: 0.8s; }

/* Day Image */
.day-image {
  position: absolute;
  background-size: cover;
  background-position: center center;
  pointer-events: none;
  transition: all 1s ease;
}

/* Day Overlay */
.day-overlay {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-image: linear-gradient(rgba(20, 20, 20, 0.7), rgba(20, 20, 20, 0));
  background-position: 0 0;
  background-size: 100% 200%;
  opacity: 1;
  pointer-events: none;
  transition: all 0.5s ease;
}

/* Day Content */
.day-content {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  pointer-events: none;
}

/* Day Title */
.day-title {
  position: absolute;
  top: -10px;
  height: 65px;
  width: 100%;
  box-sizing: border-box;
  font-size: 1.8em;
  text-align: center;
  text-shadow: 0 2px 2px #2f2f2f;
  color: #3f3f3f;
  opacity: 0;
  pointer-events: none;
  transition: all 0.5s ease;
  font-family: 'serif';
}

.day-title::after {
  position: absolute;
  top: 0;
  height: 0;
  width: 100%;
  display: block;
  content: attr(data-title);
  overflow: hidden;
  color: #ffd700;
  transition: all 0.85s ease;
}

.day-title::before {
  position: absolute;
  bottom: 15px;
  display: block;
  content: "";
  height: 2px;
  width: 85%;
  background: white;
  box-shadow: 0 2px 6px #2f2f2f;
  transform-origin: left center;
  transform: scaleX(0);
  transition: transform 1.25s ease;
}

/* Day Emblem */
.day-emblem {
  position: absolute;
  height: 200px;
  width: 40%;
  opacity: 0;
  transform: translateY(120px);
  transition: all 1s ease;
  transition-delay: 1.75s;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: auto 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50px;
  text-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
}

/* Day Info */
#days-gallery .day-info {
  position: absolute;
  bottom: 15px;
  right: 15px;
  padding: 15px;
  font-size: 0.85em;
  color: white;
  text-shadow: 0 1px 4px #0f0f0f;
  background-image: linear-gradient(90deg, rgba(20, 20, 20, 0), rgba(20, 20, 20, 0.7));
  opacity: 0;
  transition: all 1s ease;
  transition-delay: 2s;
  list-style: none;
  display: block;
  margin-bottom: 0;
}

#days-gallery .day-info li {
  position: relative;
  margin-bottom: 5px;
  text-align: justify;
  opacity: 0;
  transform: translateX(-30px);
  transition: all 0.75s ease;
}

#days-gallery .day-info li:nth-of-type(1) { transition-delay: 2.7s; }
#days-gallery .day-info li:nth-of-type(2) { transition-delay: 2.9s; }
#days-gallery .day-info li:nth-of-type(3) { transition-delay: 3.1s; }

/* Close Button */
.btn-close {
  position: absolute;
  z-index: 100;
  top: 20px;
  right: 20px;
  height: 24px;
  width: 24px;
  pointer-events: none;
}

.btn-close::before,
.btn-close::after {
  position: absolute;
  top: 12px;
  display: block;
  content: "";
  width: 100%;
  height: 4px;
  background-color: white;
  opacity: 0;
  cursor: pointer;
  transition: all 0.5s ease;
}

.btn-close::after {
  transform: rotate(45deg) translateX(-12px);
  transition-delay: 3s;
}

.btn-close::before {
  transform: rotate(-45deg) translateX(12px);
  transition-delay: 3.2s;
}

/* Hover State */
.day-slide:hover:not(.active):not(.anim-out) .day-image {
  transform: scale(1.1);
}

.day-slide:hover:not(.active):not(.anim-out) .day-overlay {
  opacity: 0.6;
}

.day-slide:hover:not(.active):not(.anim-out) .day-content .day-title {
  opacity: 1;
  transform: translateY(30px);
}

.day-slide:hover:not(.active):not(.anim-out) .day-content .day-title::after {
  height: 100%;
}

/* Keyframe Animations */
@keyframes dayImgAnimIn {
  to {
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
  }
}

@keyframes dayImgAnimOut {
  to {
    left: -100%;
  }
}

