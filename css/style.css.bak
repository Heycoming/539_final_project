  }

  #days-gallery .section-subtitle {
    font-size: 16px;
  }

  #days-container {
    flex-direction: row;
    flex-wrap: wrap;
    gap: 10px;
  }

  .day-slide {
    flex: 1 1 calc(50% - 5px);
    min-height: 400px;
    height: 400px;
  }

  .day-slide.active {
    flex: 1 1 100%;
    height: 70vh;
    min-height: 500px;
  }

  .day-slide.anim-out {
    flex: 1 1 calc(50% - 5px);
    height: 400px;
  }

  .day-title {
    font-size: 2.5em;
  }

  .day-emblem {
    font-size: 100px;
  }

  .tips-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .footer-content {
    grid-template-columns: repeat(2, 1fr);
  }

  .tips-section {
    padding: 80px 0;
  }

  .map-container {
    border-radius: 20px;
  }

  .day-card-header {
    padding: 25px 30px;
  }

  .day-title {
    font-size: 1.8rem;
  }
}

/* Desktop (769px+) */
@media screen and (min-width: 769px) {
  .nav-menu {
    position: static;
    flex-direction: row;
    background: transparent;
    width: auto;
    padding: 0;
    gap: 40px;
  }

  .hamburger {
    display: none;
  }
}

/* Large Desktop (1025px+) */
@media screen and (min-width: 1025px) {
  .hero-title {
    font-size: 60px;
  }

  .hero-subtitle {
    font-size: 18px;
  }

  .section-title {
    font-size: 42px;
  }

  #days-gallery {
    padding-top: 30px;
  }

  #days-gallery .section-title {
    font-size: 42px;
  }

  #days-container {
    flex-wrap: nowrap;
    height: 90vh;
    min-height: 500px;
    gap: 0;
  }

  .day-slide {
    flex: 1;
    height: 100%;
    min-height: auto;
  }

  .day-slide.active {
    flex: 1;
    height: 100%;
    min-height: auto;
  }

  .day-slide.anim-out {
    flex: 0;
    height: 100%;
  }

  .day-title {
    font-size: 3em;
  }

  .day-slide.active .day-overlay {
    width: 25%;
  }

  .day-slide.active .day-content .day-title {
    width: 25%;
  }

  .day-emblem {
    font-size: 120px;
    width: 25%;
  }

  #days-gallery .day-info {
    padding: 30px 30px 30px 120px;
    font-size: 1.25em;
    right: 30px;
    bottom: 30px;
  }

  .itinerary-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }

  .tips-grid {
    grid-template-columns: repeat(4, 1fr);
  }

  .footer-content {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }

  .footer-container {
    padding: 0 40px;
  }
}
